<div class="flex justify-between mt-2">
  <%= search_form_for @q, url: project_path(@project) do |f| %>
    <div class="flex">
      <%= f.search_field :name_cont, class: "bg-gray-200 text-gray-700 rounded-md text-xs", placeholder: "Search Task names..." %>
      <button type="submit" class="cursor-pointer text-gray-300">
        <%= inline_svg_tag("search.svg") %>
      </button>
    </div>
  <% end %>
  <div>
    <%= link_to 'Clear', project_path(@project), class: "font-bold hover:text-gray-400" %>
  </div>
  <%= search_form_for @q, url: project_path(@project) do |f| %>
    <div class="flex">
      <%= f.select :priority_eq, Task.priorities, {}, {class: "rounded-md", onchange: "this.form.requestSubmit()"} %>
    </div>
  <% end %>
</div>

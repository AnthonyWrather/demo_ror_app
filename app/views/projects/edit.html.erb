<div class="max-w-sm border-b border-blue-500 pb-1 mx-auto">
  <%= form_with model: @project do |form|%>
    <div class="flex">
      <%= form.text_field :name, placeholder: "Create new Project.", class: "bg-transparent border-none w-full text-gray-200"%>
      <%= form.submit "Update", class: "bg-blue-500 cursor-pointer rounded-md hover:bg-blue-600"%>
    </div>
  <% end%>
</div>
<% content_for :title, "Showing team" %>

<div class="mx-auto md:w-2/3 w-full text-gray-200">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing team</h1>

  <%= render @team %>

  <%= link_to "Edit this team", edit_team_path(@team), class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 text-gray-800 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to teams", teams_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 text-gray-800 hover:bg-gray-50 inline-block font-medium" %>
  <div class="inline-block ml-2">
    <%= button_to "Destroy this team", @team, method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
  </div>
</div>

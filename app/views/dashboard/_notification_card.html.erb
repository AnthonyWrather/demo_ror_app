<div data-toggle-target="notificationCard" class="hidden rounded-bg font-semibold capitalize bg-gray-600 w-90h-fit p-4 absolute right-0 mt-4">
  <ul>
    <% current_user.notifications.unread.limit(5).each do |notification| %>
      <li class="mb-6">
        <%= link_to notification.message, notifications_path %>
      </li>
    <% end %>
    <% if current_user.notifications.unread.any? %>
      <li class="mb-6 bg-gray-900 rounded-md p-2">
        <%= link_to "See all unread notifications.", notifications_path %>
      </li>
    <% else %>
      <li class="mb-6 bg-gray-900 rounded-md p-2">
        <%= link_to "No unread notifications.", notifications_path %>
      </li>
    <% end %>
  </ul>
</div>
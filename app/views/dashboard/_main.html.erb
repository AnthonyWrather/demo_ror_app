    <main class="p-3 text-gray-200 mx-auto">
      <div class="flex gap-6 flex-wrap">
        <div class="p4 m-3 rounded-lg bg-gray-600 min-w-24 min-h-24 text-center">
          <p class="capitalise m-3 border-2 border-dotted border-gray-800 rounded-md p-1">Total Projects</p>
          <p class="m-3 font-bold bg-gray-800 rounded-md"><%= @projects.size %></p>
        </div>
        <div class="p4 m-3 rounded-lg bg-gray-600 min-w-24 min-h-24 text-center">
          <p class="capitalise m-3 border-2 border-dotted border-gray-800 rounded-md p-1">Total Tasks</p>
          <p class="m-3 font-bold bg-gray-800 rounded-md"><%= @tasks.size %></p>
        </div>
        <div class="p4 m-3 rounded-lg bg-gray-600 min-w-24 min-h-24 text-center">
          <p class="capitalise m-3 border-2 border-dotted border-gray-800 rounded-md p-1">Completed Tasks</p>
          <p class="m-3 font-bold bg-gray-800 rounded-md"><%= @tasks.completed.size %></p>
        </div>
        <div class="p4 m-3 rounded-lg bg-gray-600 min-w-24 min-h-24 text-center">
          <p class="capitalise m-3 border-2 border-dotted border-gray-800 rounded-md p-1">Overdue Tasks</p>
          <p class="m-3 font-bold bg-gray-800 rounded-md"><%= @tasks.expired.size %></p>
        </div>
        <div class="p4 m-3 rounded-lg bg-gray-600 min-w-24 min-h-24 text-center">
          <p class="capitalise m-3 border-2 border-dotted border-gray-800 rounded-md p-1">Urgent Tasks</p>
          <p class="m-3 font-bold bg-gray-800 rounded-md"><%= @tasks.urgent.size %></p>
        </div>
        <div class="p4 m-3 rounded-lg bg-gray-600 min-w-24 min-h-24 text-center">
          <p class="capitalise m-3 border-2 border-dotted border-gray-800 rounded-md p-1">Pending Tasks</p>
          <p class="m-3 font-bold bg-gray-800 rounded-md"><%= @tasks.pending.size %></p>
        </div>
      </div>
      <%= render "charts" %>
    </main>
